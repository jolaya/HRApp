<p id="notice"><%= notice %></p>

<h1>Listing Staffs</h1>

<div class="media">
  <div class="media-body">
  	<table class="table table-hover">
      <thead>
        <tr>
          <th>Staff number</th>
          <th>Name</th>
          <th>Surname</th>
          <th>Job title</th>
          <th>Department</th>
          <th>Startdate</th>
          <th>Finishdate</th>
          <th>Active</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @staffs.each do |staff| %>
          <tr>
            <td><%= staff.staff_number %></td>
            <td><%= staff.name %></td>
            <td><%= staff.surname %></td>
            <td><%= staff.job_title %></td>
            <td><%= staff.department %></td>
            <td><%= staff.startdate %></td>
            <td><%= staff.finishdate %></td>
            <td><%= staff.active %></td>
            <td><%= link_to 'Show', staff, class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_staff_path(staff), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', staff, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

