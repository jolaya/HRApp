<p id="notice"><%= notice %></p>

<h1>Listing Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Staff number</th>
      <th>Name</th>
      <th>Surname</th>
      <th>Job title</th>
      <th>Department</th>
      <th>Startdate</th>
      <th>Finishdate</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.staff_number %></td>
        <td><%= staff.name %></td>
        <td><%= staff.surname %></td>
        <td><%= staff.job_title %></td>
        <td><%= staff.department %></td>
        <td><%= staff.startdate %></td>
        <td><%= staff.finishdate %></td>
        <td><%= staff.active %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

