<p id="notice"><%= notice %></p>

<h1>Listing Entry Types</h1>

<div class="media">
  <div class="media-body">
  	<table class="table table-hover">
      <thead>
        <tr>
          <th>Initial</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @type_ents.each do |type_ent| %>
          <tr>
            <td><%= type_ent.initial %></td>
            <td><%= type_ent.description %></td>
            <td><%= link_to 'Show', type_ent, class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_type_ent_path(type_ent), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', type_ent, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<h3>Import Entry Types</h3>
<%= form_tag import_type_ents_path, multipart: true do %>
  <%= file_field_tag :file %> <br>
  <%= submit_tag "Upload Entry Types" %>
<% end %>

<%= link_to 'New Entry Type', new_type_ent_path %>
