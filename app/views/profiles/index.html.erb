<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<div class="media">
  <div class="media-body">
  	<table class="table table-hover">
      <thead>
        <tr>
          <th>Staff</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @profiles.each do |profile| %>
          <tr>
            
            <td><%= profile.staff.name + '.' + profile.staff.surname  %></td>
            <td><%= profile.user.email %></td>
            <td><%= link_to 'Show', profile, class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_profile_path(profile), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', profile, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

