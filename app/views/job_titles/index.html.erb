<p id="notice"><%= notice %></p>

<h1>Listing Job Titles</h1>

<div class="media">
  <div class="media-body">
  	<table class="table table-hover">
      <thead>
        <tr>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @job_titles.each do |job_title| %>
          <tr>
            <td><%= job_title.description %></td>
            <td><%= link_to 'Show', job_title, class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_job_title_path(job_title), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', job_title, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<h3>Import Job Titles</h3>
<%= form_tag import_job_titles_path, multipart: true do %>
  <%= file_field_tag :file %> <br>
  <%= submit_tag "Upload Job Titles" %>
<% end %>
<br>
<%= link_to 'New Job title', new_job_title_path %>
